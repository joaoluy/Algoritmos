#include <iostream>
using namespace std;
// faça uma função que recebe 3 valores inteiros por parâmetro e retorna-os ordenados em ordem crescente.

int crescente(int a, int b, int c){
    if(a < b){
        if (c < a){
            return 5;
        }else if(b < c){
            return 1;
            }else if(c < b){
            return 2;
            }
    } else if(b < a){
        if(a < c){
            return 3;
        }else if(c < a){
            return 4;
        }else if(c < b){
            return 6;
        }
    }
    return 0;
}

int main(){
int a, b, c;
cout << "digite 3 numeros:";
cin >> a >> b >> c;
crescente(a,b,c);
cout << "os numeros em forma crescente são:" << endl;
if(crescente(a,b,c) == 1){
    cout << a << endl << b << endl << c << endl;
}else if(crescente(a,b,c) == 2){
    cout << a << endl << c << endl << b << endl;
}else if(crescente(a,b,c) == 3){
    cout << b << endl << c << endl << a << endl;
}else if(crescente(a,b,c) == 4){
    cout << b << endl << a << endl << c << endl;
}else if(crescente(a,b,c) == 5){
    cout << c << endl << a << endl << b << endl;
}else if(crescente(a,b,c) == 6){
    cout << c << endl << b << endl << a << endl;
}
}
